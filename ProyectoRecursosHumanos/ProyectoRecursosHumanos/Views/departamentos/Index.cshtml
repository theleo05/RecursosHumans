@model IEnumerable<ProyectoRecursosHumanos.Models.departamentos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo_depar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigo_depar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
          <button class="btn btn-warning"> @Html.ActionLink("Editar", "Edit", new { id=item.id }) </button> |
           <button class="btn btn-link"> @Html.ActionLink("Detalles", "Details", new { id=item.id })</button> |
          <button class="btn btn-danger">  @Html.ActionLink("Eliminar", "Delete", new { id=item.id })</button>
        </td>
    </tr>
}

</table>
